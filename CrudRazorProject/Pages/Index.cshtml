@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Gestión de Productos</h1>
    <p class="lead">Sistema CRUD desarrollado con Razor Pages, Entity Framework Core y SQL Server.</p>

    <div class="mt-5">
        <a class="btn btn-primary btn-lg" asp-page="/Products/Index">
            <i class="bi bi-box"></i> Ver Productos
        </a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Crear</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <p class="card-text flex-grow-1">Agregar nuevos productos al catálogo.</p>
                <a asp-page="/Products/Create" class="btn btn-outline-success mt-auto">Ir a Crear</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Leer</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <p class="card-text flex-grow-1">Ver detalles de los productos existentes.</p>
                <a asp-page="/Products/Index" class="btn btn-outline-primary mt-auto">Ir a Leer</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Actualizar/Eliminar</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <p class="card-text flex-grow-1">Modificar o eliminar productos existentes.</p>
                <a asp-page="/Products/Index" class="btn btn-outline-warning mt-auto">Ir a Gestionar</a>
            </div>
        </div>
    </div>
</div>